<div class="w-full mt-12 flex justify-center">
  <div class="max-w-4xl w-full bg-white shadow-lg rounded-2xl border border-gray-200 p-8">

    <!-- Header -->
    <div class="text-center mb-10">
      <h1 class="text-4xl font-extrabold text-gray-800 tracking-tight">
        Welcome ðŸ‘‹
      </h1>
      <p class="mt-3 text-lg text-gray-500">
        Explore the categories and subcategories we offer
      </p>
    </div>

    <!-- Categories Section -->
    <div class="space-y-6">
      <h2 class="text-2xl font-semibold text-gray-700 border-b pb-2">
        Categories We Have
      </h2>

      <% if @categories.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
          <% @categories.each do |category| %>

            <!-- Category Card -->
            <div class="rounded-xl border border-gray-200 p-5 hover:shadow-md transition">
              <h3 class="text-xl font-bold text-indigo-600 mb-3">
                <%= category.name %>
              </h3>

              <% if category.sub_categories.any? %>
                <div class="flex flex-wrap gap-2">
                SubCategories:-  
                  <% category.sub_categories.each do |sub_category| %>
                  
                    <span class="px-3 py-1 text-sm rounded-full bg-indigo-50 text-indigo-700 font-medium">
                     <%= sub_category.name %>
                    </span>
                  <% end %>
                </div>
              <% else %>
                <p class="text-sm text-gray-400 italic">
                  No subcategories available
                </p>
              <% end %>
            </div>

          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 mt-4 italic">
          No categories available at the moment.
        </p>
      <% end %>
    </div>

  </div>
</div>
