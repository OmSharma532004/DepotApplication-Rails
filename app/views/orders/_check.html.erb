<fieldset 
  data-payment-target="additionalFields" 
  data-type="Check"
  class="mt-6 bg-gray-50 p-6 rounded-xl shadow-inner "
>
  <div class="mb-6">
    <%= form.label t('.routing_number'), class: "block font-medium text-gray-700" %>
    <%= form.text_field :routing_number, class: " border border-gray-200 input-field" %>
  </div>

  <div class="mb-6">
    <%= form.label t('.account_number'), class: "block font-medium text-gray-700" %>
    <%= form.password_field :account_number, class: " border border-gray-200 input-field" %>
  </div>
</fieldset>
