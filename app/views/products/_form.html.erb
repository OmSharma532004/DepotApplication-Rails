<%= form_with(model: product, multipart: true, class: "contents") do |form| %>

  <% if product.errors.any? %>
    <div id="error_explanation"
         class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2>
        <%= pluralize(product.errors.count, "error") %>
        prohibited this product from being saved:
      </h2>

      <ul class="list-disc ml-6 mt-2">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title,
          class: field_classes(product, :title) %>
  </div>

  <!-- Description -->
  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description,
          rows: 4,
          class: field_classes(product, :description) %>
  </div>

  <!-- Price -->
  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price,
          class: field_classes(product, :price) %>
  </div>

  <!-- Enabled -->
  <div class="my-5 flex items-center space-x-3">
    <%= form.check_box :enabled,
          class: "h-5 w-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
    <%= form.label :enabled, class: "text-gray-700" %>
  </div>

  <!-- Discount Price -->
  <div class="my-5">
    <%= form.label :discount_price %>
    <%= form.text_field :discount_price,
          class: field_classes(product, :discount_price) %>
  </div>

  <!-- Images -->
  <div class="my-5">
    <%= form.label :images %> <span class="text-sm text-gray-500">(LIMIT 3)</span>
    <%= form.file_field :images,
          multiple: true,
          class: field_classes(product, :images) %>
  </div>

  <!-- Permalink -->
  <div class="my-5">
    <%= form.label :permalink %>
    <%= form.text_field :permalink,
          class: field_classes(product, :permalink) %>
  </div>

  <!-- Category -->
  <div class="my-5">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id,
          @categories,
          :id,
          :name,
          { prompt: "Select One" },
          class: field_classes(product, :category_id) %>
  </div>

  <!-- Submit -->
  <div class="inline">
    <%= form.submit "Save Product",
          class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
  </div>

<% end %>
