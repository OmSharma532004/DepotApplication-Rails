<% content_for :title, "Showing product" %>

<div class="max-w-5xl mx-auto px-6 py-8">

  <% if notice.present? %>
    <p class="mb-6 px-4 py-2 bg-green-50 text-green-600 font-medium rounded-md inline-block">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-3xl mb-8">Showing product</h1>

  <!-- Product Card Centered -->
  <div class="flex justify-center mb-8">
    <%= render @product %>
  </div>

  <!-- Actions -->
  <div class="flex justify-center gap-3">
    <%= link_to "Edit this product",
          edit_product_path(@product),
          class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 font-medium" %>

    <%= link_to "Back to products",
          products_path,
          class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 font-medium" %>

    <%= button_to "Destroy this product",
          @product,
          method: :delete,
          class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-500 font-medium",
          data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
