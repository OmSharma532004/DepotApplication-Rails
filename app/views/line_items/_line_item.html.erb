<tr class="border-b border-gray-300 hover:bg-gray-50 transition">

  <!-- Quantity Controls -->
  <td class="flex items-center px-2 py-2 space-x-2 border-r border-gray-300">

    <%= button_to add_line_item_line_item_path(line_item),
          method: :patch,
          data: { turbo_stream: true },
          class: "px-2 py-1 bg-green-600 hover:bg-green-700 text-white rounded shadow-sm text-sm" do %>
      +
    <% end %>

    <span class="px-2 py-1 bg-gray-200 rounded text-gray-800 font-semibold shadow-sm text-sm">
      <%= line_item.quantity %>
    </span>

    <%= button_to remove_line_item_line_item_path(line_item),
          method: :patch,
          data: { turbo_stream: true },
          class: "px-2 py-1 bg-red-600 hover:bg-red-700 text-white rounded shadow-sm text-sm" do %>
      -
    <% end %>
  </td>

  <!-- Product Name -->
  <td class="px-2 py-2 font-medium text-gray-900 border-r border-gray-300">
    <%= line_item.product.title %>
  </td>

  <!-- Total Price -->
  <td class="px-2 py-2 text-right font-bold text-gray-900">
    <%= number_to_currency(line_item.total_price) %>
  </td>

</tr>
