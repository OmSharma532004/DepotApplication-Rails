<body class="min-h-screen bg-gray-50 flex items-center justify-center px-4">

  <div class=" mx-auto bg-white p-8 rounded-2xl shadow-lg border border-gray-200">

    <h1 class="text-center text-2xl font-semibold text-gray-900">
      Login
    </h1>

    <p class="text-center text-sm text-gray-500 mb-6">
      Access your dashboard
    </p>

    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-100 text-green-700 text-sm mb-4 
                 border border-green-200 rounded-lg text-center">
        <%= notice %>
      </p>
    <% end %>

    <%= form_tag do %>

      <!-- Username -->
      <div class="mb-4">
        <%= label_tag :name, "Username",
          class: "block text-sm font-medium text-gray-700 mb-1" %>

        <%= text_field_tag :name, params[:name],
          class: "w-full px-3 py-2 rounded-lg border border-gray-300 
                 shadow-sm bg-gray-50
                 focus:ring-2 focus:ring-green-600 focus:border-transparent" %>
      </div>

      <!-- Password -->
      <div class="mb-6">
        <%= label_tag :password, "Password",
          class: "block text-sm font-medium text-gray-700 mb-1" %>

        <%= password_field_tag :password, params[:password],
          class: "w-full px-3 py-2 rounded-lg border border-gray-300 
                 shadow-sm bg-gray-50
                 focus:ring-2 focus:ring-green-600 focus:border-transparent" %>
      </div>

      <!-- Button -->
      <%= submit_tag "Login",
        class: "w-full py-2.5 rounded-lg bg-green-600 text-white font-medium
                hover:bg-green-700 transition shadow-sm" %>

    <% end %>

  </div>

</body>
