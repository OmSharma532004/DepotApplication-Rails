<% content_for :title, "Orders" %>

<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <div class="mb-6">
      <p id="notice"
         class="inline-flex items-center rounded-md bg-green-50 px-4 py-2 text-sm font-medium text-green-600 border border-green-200">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414L8.414 15l-4.121-4.121a1 1 0 111.414-1.414L8.414 12.172l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        <%= notice %>
      </p>
    </div>
  <% end %>

  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
    <h1 class="text-xl font-bold tracking-tight text-gray-900">Categories</h1>
  </div>

  <!-- Orders List -->
  <div id="orders" class="space-y-4">
    <% if @categories.any? %>
      <% @categories.each do |category| %>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm hover:shadow transition">
          <%= render partial: "category", locals: { category: category } %>
        </div>
      <% end %>
    <% else %>
      <div class="rounded-lg border border-dashed border-gray-300 bg-gray-50 p-10 text-center">
        <p class="text-sm text-gray-500">No Categories.</p>
      </div>
    <% end %>
  </div>
</div>
