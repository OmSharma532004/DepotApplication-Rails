<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>

  <ul class="mb-6">
    <% cart.line_items.each do |item| %>
      <li class="flex mb-6">
        <%= image_tag(item.product.image_url, class: "object-contain w-40 h-48 shadow mr-6") %>

        <div>
          <h2 class="font-bold text-lg mb-3"><%= item.product.title %></h2>

          <p><%= sanitize(item.product.description) %></p>

          <div class="mt-3">
            <p>Quantity: <%= item.quantity %></p>
            <p>Price: <%= number_to_currency(item.product.price * item.quantity) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>

  <table class="table-auto w-full">
    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="3">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<%= button_to 'Empty Cart',
    cart,
    method: :delete,
    class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
