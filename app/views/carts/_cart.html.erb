<div id="<%= dom_id cart %>" class="p-4 bg-white rounded-lg shadow-md">

  <h2 class="font-bold text-xl mb-3 border-b pb-2 text-gray-800">
    <%= t('.title') %>
  </h2>

  <table class="w-full text-sm border border-gray-300">

    <thead>
      <tr class="bg-gray-100 border-b border-gray-300 text-gray-700">
        <th class="text-left px-2 py-2 border-r border-gray-300">Qty</th>
        <th class="text-left px-2 py-2 border-r border-gray-300">Product</th>
        <th class="text-right px-2 py-2">Price</th>
      </tr>
    </thead>

    <tbody>
      <%= render cart.line_items %>
    </tbody>

    <tfoot>
      <tr class="border-t border-gray-400">
        <th colspan="2" class="text-right px-2 py-2 text-gray-700 border-r border-gray-300">Total:</th>
        <td class="text-right px-2 py-2 font-bold text-lg">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>

  <div class="flex justify-end gap-3 mt-3">
    <%= button_to 'Empty Cart', cart, method: :delete,
          class: 'rounded-md py-2 px-4 text-white bg-red-600 hover:bg-red-700 shadow-sm' %>

    <%= button_to 'Checkout', new_order_path(locale: I18n.locale), method: :get,
          class: 'rounded-md py-2 px-4 text-white bg-green-600 hover:bg-green-700 shadow-sm' %>
  </div>
</div>
