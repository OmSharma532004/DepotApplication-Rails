<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>

  <table class="table-auto w-full">
    <thead>
      <tr>
        <th class="text-left pb-2">Image</th>
        <th class="text-left pb-2">Qty</th>
        <th></th>
        <th class="text-left pb-2">Product</th>
        <th class="text-right pb-2">Price</th>
      </tr>
    </thead>

    <%= render cart.line_items %>

    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="4">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>

  <div class= "flex mt-1"> 
  <%= button_to 'Empty Cart', cart, method: :delete,
        class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>

  <%= button_to 'Checkout', new_order_path, method: :get,
   class: 'ml-4 rounded-lg py-1 px-2 text-black bg-green-200' %>
  </div>
</div>

